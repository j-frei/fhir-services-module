{
    "name": "FHIR Services",
    "namespace": "Vanderbilt\\FHIRServicesExternalModule",
    "framework-version": 6,
    "description": "An experimental module prototyping multiple FHIR features (see the README documentation for details).",
    "authors": [
        {
            "name": "Mark McEver",
            "email": "datacore@vumc.org",
            "institution": "Vanderbilt University Medical Center"
        }
    ],
    "permissions": [
        "redcap_every_page_top",
        "redcap_module_link_check_display",
        "redcap_data_entry_form"
    ],
    "links": {
		"project": [
			{
				"name": "Questionnaire Options",
                "url": "questionnaire-options.php",
                "icon": "fas fa-clipboard-check",
                "show-header-and-footer": true
			},
            {
				"name": "Received FHIR Resources",
